<h1>Bookの一覧ページ</h1>

<h1>User info</h1>
<div class="profile-container">
    <h3 class="profile-name">name:<%= @user.name %></h3>
    <h3 class="profile-name">introduction:<%= @user.introduction %></h3>

    <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
    <% if @user.id == current_user.id %>
      <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
    <% end %>
</div>

<h2>New book</h2>
<%= form_with model:@book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %><br>

  <%= f.submit 'Create book' %>

<% end %>

<h2>Books</h2>
<% @books.each do |f| %>
  <%= link_to attachment_image_tag(f.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg"), user_path(f.user.id) %>
  <%= link_to f.title, book_path(f.id) %>
  <%= f.body %><br>

<% end %>