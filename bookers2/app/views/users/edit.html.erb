<h3>User info(編集ページ)</h3>

<%= form_with model:@user, local:true do |f| %>

  <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>


  <div class="user-edit-image">
    <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
  </div>
  <label for="inputImage">Image</label>
  <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %><br>


  <label for="inputIntroduction">introduction</label>
  <%= f.text_field :introduction, autofocus: true,  id:"inputIntroduction" %><br>


<%= f.submit "変更を保存" %>
<% end %>